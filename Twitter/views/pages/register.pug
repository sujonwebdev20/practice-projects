extends ../layouts/head.pug

block title 
  title= title 

block cssLink 
  link(rel="stylesheet", href="/css/register.css")

block jsLink 
  script(src="/js/register.js" defer)

block bodyContent 
  section(class="signup-form") 
    //- login card start -//
    article(class="card card--signup") 
      svg(class="card__logo" xmlns='http://www.w3.org/2000/svg', x='0px', y='0px', width='80', height='80', viewBox='0 0 48 48')
        path(fill='#03A9F4', d='M42,12.429c-1.323,0.586-2.746,0.977-4.247,1.162c1.526-0.906,2.7-2.351,3.251-4.058c-1.428,0.837-3.01,1.452-4.693,1.776C34.967,9.884,33.05,9,30.926,9c-4.08,0-7.387,3.278-7.387,7.32c0,0.572,0.067,1.129,0.193,1.67c-6.138-0.308-11.582-3.226-15.224-7.654c-0.64,1.082-1,2.349-1,3.686c0,2.541,1.301,4.778,3.285,6.096c-1.211-0.037-2.351-0.374-3.349-0.914c0,0.022,0,0.055,0,0.086c0,3.551,2.547,6.508,5.923,7.181c-0.617,0.169-1.269,0.263-1.941,0.263c-0.477,0-0.942-0.054-1.392-0.135c0.94,2.902,3.667,5.023,6.898,5.086c-2.528,1.96-5.712,3.134-9.174,3.134c-0.598,0-1.183-0.034-1.761-0.104C9.268,36.786,13.152,38,17.321,38c13.585,0,21.017-11.156,21.017-20.834c0-0.317-0.01-0.633-0.025-0.945C39.763,15.197,41.013,13.905,42,12.429')
      h1(class="card__title") Sign Up to Twitter 
      //- form start -//
      form(action="/register", class="card__form" method="POST" enctype="multipart/form-data")
        //- get (First Name) from input field
        div(class="input input--firstname")
          label(for="firstName") 
          input(type="text", class="input__field" id="firstName" placeholder="Enter your First Name" name="firstName" required)
          p(class="input__error input__error--visible-firstName") First Name is required
        //- get (Last Name) from input field
        div(class="input input--lastname")
          label(for="lastName") 
          input(type="text", class="input__field" id="lastName" placeholder="Enter your Last Name" name="LastName" required)
          p(class="input__error input__error--visible-lastName") Last Name is required
        //- get (Email Address) from input field
        div(class="input input--email")
          label(for="email") 
          input(type="email", class="input__field" id="email" placeholder="Email address" name="email" required)
          p(class="input__error input__error--visible-email") Email is required
        //- get (Username) from input field
        div(class="input input--username")
          label(for="username") 
          input(type="text", class="input__field" id="username" placeholder="Username" name="username" required)
          p(class="input__error input__error--visible-username") Username is required
        //- get (Password) from input field
        div(class="input input--password")
          label(for="password") 
          input(type="password", class="input__field" id="password" placeholder="Password" name="password" required)
          p(class="input__error input__error--visible-password") Password is required
        //- get (Confirm Password) from input field
        div(class="input input--confirm-password")
          label(for="confirmPassword") 
          input(type="password", class="input__field" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required)
          p(class="input__error input__error--visible-confirm-password") Confirm Password is required
        //- get (Profile) from input field
        div(class="avatar-upload avatar-upload--profile")
          label(class="avatar-upload__label" for="avatar") Choose a file
            figure(class="avatar-upload__image-placeholder")
              svg(class="avatar-upload__icon" xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17")
                path(d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z") 
          input(type="file", class="avatar-upload__field" id="avatar" placeholder="Confirm Password" name="avatar" accept=".jpg, .png, .jpeg")
        //- (Submit) forms button
        button(class="button button--submit") Sign Up
        //- form end -//
        //- (Redirect) login link here
        p(class="card__footer") Already have an account?
          a(href="/login" class="card__link") &nbsp;Login
      //- login card end -//